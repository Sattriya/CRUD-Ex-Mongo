<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>Daftar Contact</h1>
            <% if (msg.length !==0) { %>
                <div class="alert alert-success fw-bold" role="alert">
                    <%= msg %>
                </div>
                <% } %>
                    <a href="/contact/add" class="btn btn-primary mt-2 mb-2">Tambah Contact</a>
                    <table class="table table-striped">
                        <% if (contacts.length==0) { %>
                            <tr>
                                <td colspan="4">
                                    <div class="alert alert-danger fw-bold" role="alert">
                                        Contact masih Kosong ðŸ¤·.
                                    </div>
                                </td>
                            </tr>
                            <% } %>
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Nama</th>
                                        <th scope="col">No HP</th>
                                        <th scope="col">Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% contacts.forEach((c, i)=> { %>
                                        <tr>
                                            <th scope="row">
                                                <%= i+1 %>
                                            </th>
                                            <td>
                                                <%= c.nama %>
                                            </td>
                                            <td>
                                                <%= c.nohp %>
                                            </td>
                                            <td>
                                                <a href="/contact/<%= c.nama %>"
                                                    class="btn btn-success badge rounded-pill"><i
                                                        class="bi bi-info-circle"></i> Detail</a>
                                            </td>
                                        </tr>
                                        <% }) %>

                                </tbody>
                    </table>
        </div>
    </div>
</div>